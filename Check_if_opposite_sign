/To check if sign is opposite





#include<iostream>

using namespace std;



bool opposite(int num1,int num2)
{

return ((num1^num2)<0);
    
}

int main()
{
    
cout<<"Enter both the numbers :"<<endl;
int num1,num2;
cin>>num1>>num2;
if(opposite(num1,num2))
{
    cout<<"Numbers have opposite sign"<<endl;
}
else
{
    cout<<"Same sign";
}
}
